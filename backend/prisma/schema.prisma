generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  bookid    Int         @id @default(autoincrement())
  title     String
  summary   String
  authorid  Int
  isbn      String
  author    Author      @relation(fields: [authorid], references: [authorid])
  genre Genre[] @relation("BookGenre")
  instances BookInstance[]
}

model Genre {
  genreid   Int         @id @default(autoincrement())
  name      String
  books Book[] @relation("BookGenre")
}

model Author {
  authorid      Int       @id @default(autoincrement())
  firstName     String
  familyName    String
  date_of_birth DateTime
  date_of_death DateTime?
  name          String
  lifeSpan      String
  books         Book[]
}
enum BookStatus{
  AVAILABLE
  RESERVED
  LOANED
  MAINTENANCE
}
model BookInstance{
  id Int @id @default(autoincrement())
  imprint String
  due_back DateTime?
  status BookStatus @default(AVAILABLE)
  bookId Int 
  book Book @relation(fields:[bookId], references:[bookid])
}